generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String?
  name      String
  createdAt DateTime @default(now())
}

model Post {
  id          String   @id @default(uuid())
  title       String
  description String
  language    String
  content     String
  tags        Tag[]
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  views       Int      @default(0)
  likes       Int      @default(0)
  shares      Int      @default(0)
  isFeatured  Boolean  @default(false)
}

model Tag {
  id    String @id @default(uuid())
  name  String @unique
  posts Post[]
}
