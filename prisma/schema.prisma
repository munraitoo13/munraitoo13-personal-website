generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model PostTags {
  id        Int      @id @default(autoincrement())
  name      String
  posts     Post[]   @relation
}

model Post {
  id        Int      @id @default(autoincrement())
  posted    Boolean  @default(false)
  title     String
  desc      String
  post      String
  lang      String
  date      DateTime @default(now())
  tags      PostTags[] @relation
}
